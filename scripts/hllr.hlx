//hllr

 0 : ident := ~/[a-zA-Z_][a-zA-Z_0-9]*/~
 0 : token := ~/%[tT][oO][kK][eE][nN]/~
 0 : haxe  := ~/%\{([^%]|%+[^%}])*%+\}/~
 0 : colon := ~/:/~
 0 : bar   := ~/\|/~
 0 : semi  := ~/;/~
 1 : stsym := ~/%[eE][nN][tT][rR][yY]/~
 1 : perc  := ~/%/~
 
NULL 10 : comment := ~/(/\*([^*]|(\*+([^*/])))*\*+/)|(//.*)/~
NULL 10 : ws      := ~/[ \t\n\r]+/~
 
attr(ident) := %{ %; %}
attr(haxe)  := %{ %.substr(2,%.length-4); %}